@model List<Usuario>
<h1>Usuarios cadastrado</h1>
<p class="text-danger">@ViewData["Mensagem"]</p>

<table class="table">
            <thead>
                <tr>
                <th scope="row">Id</th>
                <th scope="row">login</th>
                <th scope="row">Tipo</th>
                <th scope="row">Ação</th>
                </tr>
            </thead>

                <tbody>
                    @foreach( Usuario u in Model){
                        <tr>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>


                            @if(u.Tipo == Usuario.ADMIN){
                                <td> ADMINISTRADOR</td>
                            }else{
                                <td>PADRAO</td>
                            }
                            <td><a href="EditarUsuario?id=@u.Id">Editar</a></td>
                            <td><a href="Excluir?id=@u.Id">Excluir</a></td>
                        </tr>
                    }             
                </tbody>
        </table>
            

<a href="RegistrarUsuarioS">Registrar novo usuario</a>

</div>
